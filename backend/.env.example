# JAGUAR FIGHT CLUB Backend - Development Environment Template
# Copy this file to .env and fill in your values

# Server Configuration
NODE_ENV=development
PORT=3001

# Database Configuration
DB_PATH=./database/jaguar_club.db

# Security Configuration - CHANGE THESE IN PRODUCTION!
JWT_SECRET=your_development_jwt_secret_key_here
JWT_EXPIRES_IN=30d

# CORS and Frontend Configuration
FRONTEND_URL=http://localhost:5173
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3001

# Telegram Bot Configuration - Optional for development
TELEGRAM_BOT_TOKEN=
TELEGRAM_WEBHOOK_URL=

# Registration Codes
COACH_INVITE_CODE=JAGUAR_COACH_2024
ADMIN_INVITE_CODE=JAGUAR_ADMIN_2024

# Logging Configuration
LOG_LEVEL=debug
LOG_FILE=./logs/app.log

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security Features
HELMET_ENABLED=true
CORS_ENABLED=true

# Health Check Configuration
HEALTH_CHECK_PATH=/api/test